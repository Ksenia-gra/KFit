<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthorizeActivity"
    android:background="@color/mainColor">


    <ImageView
        android:id="@+id/authentificationIv"
        android:src="@drawable/authentification"
        android:layout_width="500dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/googleAuthBtn"
        />

    <Button
        android:id="@+id/googleAuthBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="@string/entry_with_google"
        android:textColor="@color/black"
        android:textSize="@dimen/authButtonTextSize"
        app:icon="@drawable/google_icon"
        app:iconTintMode="multiply"
        app:iconTint="@color/white"
        app:iconSize="@dimen/iconButtonSize"
        app:iconGravity="textStart"
        app:cornerRadius="@dimen/buttonCornerRadius"
        android:padding="@dimen/authButtonHorizontalPadding"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/appleAuthBtn"/>

    <Button
        android:id="@+id/appleAuthBtn"
        android:text="@string/entry_with_apple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/authButtonTextSize"
        android:textColor="@color/white"
        app:icon="@drawable/apple_icon"
        app:iconTint="@color/white"
        app:iconSize="@dimen/iconButtonSize"
        app:iconGravity="textStart"
        android:padding="@dimen/authButtonHorizontalPadding"
        app:cornerRadius="@dimen/buttonCornerRadius"
        android:backgroundTint="@color/black"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>