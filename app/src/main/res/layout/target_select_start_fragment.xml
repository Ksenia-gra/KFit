<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:gravity="center"
    android:background="@color/mainColor">

    <TextView
        android:id="@+id/chooseTargetTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text="Какова ваша цель?"
        android:textColor="@color/mainTextColor"
        android:textSize="24dp">

    </TextView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/weightLostCard"
        style="?attr/materialCardViewOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="20dp"
        app:strokeColor="@color/accentColor">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                style="?attr/materialCardViewOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginVertical="5dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:strokeColor="@color/accentColor">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:src="@drawable/weight_lost_image"></ImageView>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginVertical="10dp"
                    android:text="Сбросить вес"
                    android:textColor="@color/mainTextColor"
                    android:textSize="20dp">

                </TextView>
            </LinearLayout>
        </GridLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/weightGainCard"
        style="?attr/materialCardViewOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="20dp"
        android:clickable="true"
        app:strokeColor="@color/accentColor"
        >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                style="?attr/materialCardViewOutlinedStyle"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginVertical="5dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:strokeColor="@color/accentColor"
                >

                <ImageView
                    android:background="@color/darkPurple"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:src="@drawable/weight_gain_image"></ImageView>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginVertical="10dp"
                    android:text="Набрать вес"
                    android:textColor="@color/mainTextColor"
                    android:textSize="20dp">

                </TextView>
            </LinearLayout>
        </GridLayout>
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@color/lightGrey"
        android:text="@string/defaultStartTipText"
        android:layout_height="wrap_content">

    </TextView>
    <Button
        android:layout_marginVertical="20dp"
        android:text="Далее"
        android:id="@+id/futherTarget"
        android:textSize="18sp"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:textColor="@color/mainTextColor"
        android:layout_width="match_parent"
        android:backgroundTint="@color/accentColor"
        android:layout_height="wrap_content">

    </Button>
</LinearLayout>