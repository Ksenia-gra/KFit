<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/mainColor"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="20dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:columnCount="3"
        android:rowCount="1"
        >
        <LinearLayout
            android:layout_columnWeight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/caloriesCountIntake"
                android:textColor="@color/mainTextColor"
                android:textAlignment="center"
                android:text="0"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>

            <TextView
                android:textColor="@color/mainTextColor"
                android:text="съедено"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            </TextView>

        </LinearLayout>

        <FrameLayout
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="2">
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progressCaloriesPerDay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:trackThickness="15dp"
                app:indicatorSize="180dp"
                app:trackCornerRadius="20dp"
                android:progress="20"
                app:indicatorColor="@color/secondaryAccentColor"
                app:trackColor="@color/accentColor"
                android:layout_column="1">

            </com.google.android.material.progressindicator.CircularProgressIndicator>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
                <TextView
                    android:id="@+id/caloriesCountPerDay"
                    android:textColor="@color/mainTextColor"
                    android:textAlignment="center"
                    android:text="1557"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </TextView>
                <TextView
                    android:textColor="@color/mainTextColor"
                    android:text="ккал осталось"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                </TextView>

            </LinearLayout>

        </FrameLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_columnWeight="0.5">
            <TextView
                android:id="@+id/caloriesConsump"
                android:textColor="@color/mainTextColor"
                android:textAlignment="center"
                android:text="0"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TextView>
            <TextView
                android:textColor="@color/mainTextColor"
                android:text="расход"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            </TextView>

        </LinearLayout>
    </GridLayout>
    <com.google.android.material.card.MaterialCardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_row="1"
        android:layout_column="0"
        app:strokeColor="@color/accentColor"
        app:strokeWidth="2dp"
        style="@style/Widget.Material3.CardView.Outlined"
        android:backgroundTint="@color/white"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        app:cardCornerRadius="20dp"
        android:layout_columnSpan="3">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginHorizontal="20dp"
            android:columnCount="3"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_gravity="start"
                >
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/mainTextColor"
                    android:text="Углеводы">

                </TextView>
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    app:trackCornerRadius="100dp"
                    android:progress="50"
                    android:id="@+id/carbohydratesProgress"
                    app:indicatorColor="@color/secondaryAccentColor"
                    app:trackColor="@color/accentColor"
                    app:trackThickness="10dp">

                </com.google.android.material.progressindicator.LinearProgressIndicator>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/carbohydratesUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/mainTextColor"
                        android:text="0">

                    </TextView>
                    <TextView
                        android:id="@+id/carbohydratesSum"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mainTextColor"
                        android:text="/195г">

                    </TextView>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp"
                >
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/mainTextColor"
                    android:text="Белки">

                </TextView>
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    app:trackCornerRadius="100dp"
                    android:progress="50"
                    android:id="@+id/proteinsProgress"
                    app:indicatorColor="@color/secondaryAccentColor"
                    app:trackColor="@color/accentColor"
                    app:trackThickness="10dp">

                </com.google.android.material.progressindicator.LinearProgressIndicator>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/proteinsUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/mainTextColor"
                        android:text="0">

                    </TextView>
                    <TextView
                        android:id="@+id/proteinsSum"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mainTextColor"
                        android:text="/210г">

                    </TextView>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_gravity="end"
                >
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/mainTextColor"
                    android:text="Жиры">

                </TextView>
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    app:trackCornerRadius="100dp"
                    android:progress="50"
                    android:id="@+id/squirrelsProgress"
                    app:indicatorColor="@color/secondaryAccentColor"
                    app:trackColor="@color/accentColor"
                    app:trackThickness="10dp">

                </com.google.android.material.progressindicator.LinearProgressIndicator>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/squirrelsUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/mainTextColor"
                        android:text="0">

                    </TextView>
                    <TextView
                        android:id="@+id/squirrelsSum"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mainTextColor"
                        android:text="/20г">

                    </TextView>
                </LinearLayout>

            </LinearLayout>
        </GridLayout>

    </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/main_single_row_calendar"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginVertical="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDate"
                app:deselection="false"
                app:longPress="false"
                app:multiSelection="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

            </androidx.recyclerview.widget.RecyclerView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:id="@+id/breakfastCard"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                app:strokeColor="@color/blueAccentColor"
                style="@style/Widget.Material3.CardView.Elevated"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                app:cardCornerRadius="20dp"
                android:layout_columnSpan="3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/breakfast_icon_image">

                        </ImageView>
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Завтрак"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/mainTextColor">

                        </TextView>
                        <TextView
                            android:textColor="@color/mainTextColor"
                            android:textSize="16dp"
                            android:id="@+id/breakfastComposition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Состав завтрака">

                        </TextView>
                    </LinearLayout>
                    <Button
                        android:id="@+id/addBreakfastItem"
                        style="@style/Widget.Material3.Button.IconButton"
                        app:icon="@drawable/baseline_add_24"
                        app:iconTint="@color/mainTextColor"
                        android:layout_marginHorizontal="20dp"
                        android:backgroundTint="@color/blueAccentColor"
                        android:layout_gravity="end|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </Button>
                </GridLayout>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"/>
                    <TextView
                        android:id="@+id/breakfastCalories"
                        android:layout_width="match_parent"
                        android:text="0 ккал"
                        android:layout_marginVertical="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/mainTextColor"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:id="@+id/lunchCard"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                style="@style/Widget.Material3.CardView.Elevated"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                app:cardCornerRadius="20dp"
                app:strokeColor="@color/blueAccentColor"
                android:layout_columnSpan="3">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/lunch_icon_image">

                    </ImageView>
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Обед"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/mainTextColor">

                        </TextView>
                        <TextView
                            android:textColor="@color/mainTextColor"
                            android:textSize="16dp"
                            android:id="@+id/lunchComposition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Состав обеда">

                        </TextView>
                    </LinearLayout>
                    <Button
                        android:id="@+id/addLunchItem"
                        style="@style/Widget.Material3.Button.IconButton"
                        app:icon="@drawable/baseline_add_24"
                        app:iconTint="@color/mainTextColor"
                        android:layout_marginHorizontal="20dp"
                        android:backgroundTint="@color/blueAccentColor"
                        android:layout_gravity="end|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </Button>
                </GridLayout>
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="30dp"/>
                    <TextView
                        android:id="@+id/lunchCalories"
                        android:layout_width="match_parent"
                        android:text="0 ккал"
                        android:layout_marginVertical="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/mainTextColor"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:id="@+id/dinnerCard"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                style="@style/Widget.Material3.CardView.Elevated"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                app:cardCornerRadius="20dp"
                app:strokeColor="@color/blueAccentColor"
                android:layout_columnSpan="3">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/dinner_icon_image">

                    </ImageView>
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ужин"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/mainTextColor">

                        </TextView>
                        <TextView
                            android:textColor="@color/mainTextColor"
                            android:textSize="16dp"
                            android:id="@+id/dinnerComposition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Состав ужина">

                        </TextView>
                    </LinearLayout>
                    <Button
                        android:id="@+id/addDinnerItem"
                        style="@style/Widget.Material3.Button.IconButton"
                        app:icon="@drawable/baseline_add_24"
                        app:iconTint="@color/mainTextColor"
                        android:layout_marginHorizontal="20dp"
                        android:backgroundTint="@color/blueAccentColor"
                        android:layout_gravity="end|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </Button>
                </GridLayout>
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="30dp"/>
                    <TextView
                        android:id="@+id/dinnerCalories"
                        android:layout_width="match_parent"
                        android:text="0 ккал"
                        android:layout_marginVertical="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/mainTextColor"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:id="@+id/snackCard"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                style="@style/Widget.Material3.CardView.Elevated"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                app:cardCornerRadius="20dp"
                app:strokeColor="@color/blueAccentColor"
                android:layout_columnSpan="3">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/snack_icon_image">

                    </ImageView>
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Перекус"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/mainTextColor">

                        </TextView>
                        <TextView
                            android:textColor="@color/mainTextColor"
                            android:textSize="16dp"
                            android:id="@+id/snackComposition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Состав перекуса">

                        </TextView>
                    </LinearLayout>
                    <Button
                        android:id="@+id/addSnackItem"
                        style="@style/Widget.Material3.Button.IconButton"
                        app:icon="@drawable/baseline_add_24"
                        app:iconTint="@color/mainTextColor"
                        android:layout_marginHorizontal="20dp"
                        android:backgroundTint="@color/blueAccentColor"
                        android:layout_gravity="end|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </Button>
                </GridLayout>
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="30dp"/>
                    <TextView
                        android:id="@+id/snackCalories"
                        android:layout_width="match_parent"
                        android:text="0 ккал"
                        android:layout_marginVertical="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/mainTextColor"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="Баланс воды"
                android:textColor="@color/mainTextColor"
                android:textSize="20dp"
                android:layout_row="1">

            </TextView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:id="@+id/waterCard"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                style="@style/Widget.Material3.CardView.Elevated"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                app:cardCornerRadius="20dp"
                app:strokeColor="@color/blueAccentColor"
                android:layout_columnSpan="3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mainTextColor"
                        android:textSize="18sp"
                        android:text="0,25 л"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center">

                    </TextView>
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">
                        <Button
                            android:id="@+id/removeWaterItem"
                            style="@style/Widget.Material3.Button.IconButton"
                            app:icon="@drawable/baseline_remove_24"
                            app:iconTint="@color/mainTextColor"
                            android:layout_marginHorizontal="20dp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </Button>
                        <LinearLayout
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center">
                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                app:trackCornerRadius="100dp"
                                android:progress="50"
                                android:id="@+id/waterProgress"
                                app:indicatorColor="@color/waterColor"
                                app:trackColor="@color/mainBlueColor"
                                app:trackThickness="10dp">

                            </com.google.android.material.progressindicator.LinearProgressIndicator>

                        </LinearLayout>
                        <Button
                            android:id="@+id/addWaterItem"
                            style="@style/Widget.Material3.Button.IconButton"
                            app:icon="@drawable/baseline_add_24"
                            app:iconTint="@color/mainTextColor"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </Button>
                    </GridLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>