<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/Widget.Material3.CardView.Elevated"
    android:backgroundTint="@color/darkElementColor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Media -->
        <ImageView

            android:id="@+id/productImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/dinner_icon_image"
            android:scaleType="centerCrop"
            android:contentDescription="Название продукта"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="10dp"
            android:paddingHorizontal="15dp">

            <!-- Title, secondary and supporting text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/productName"
                android:textColor="@color/mainTextColor"
                android:text="Название продукта"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                />
            <TextView
                android:id="@+id/productCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Калорийность продукта"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/mainTextColor"
                />


        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/addProductBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/baseline_add_24"
                app:iconTint="@color/darkAccentColor"
                style="@style/Widget.Material3.Button.IconButton"
                />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>