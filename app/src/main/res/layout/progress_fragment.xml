<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="wrap_content">
    <LinearLayout
        android:padding="30dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Цель показателя веса"
            android:textAllCaps="true"
            android:textColor="@color/mainTextColor"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/personalInfoCard"
            style="?attr/materialCardViewElevatedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/progress_page_image"></ImageView>

                <TextView
                    android:id="@+id/targetResultsTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Вы похудели на 2 кг!"
                    android:textColor="@color/mainTextColor"
                    android:textSize="18sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    android:gravity="center"
                    android:text="Молодец! Не останавливайтесь на достигнутом"
                    android:textColor="@color/mainTextColor"
                    android:textSize="14sp"></TextView>

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/targetProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="5dp"
                    android:progress="50"
                    app:indicatorColor="@color/secondaryAccentColor"
                    app:trackColor="@color/accentColor"
                    app:trackCornerRadius="100dp"
                    app:trackThickness="15dp">

                </com.google.android.material.progressindicator.LinearProgressIndicator>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp">

                    <TextView
                        android:id="@+id/startWeightTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:text="75 кг"
                        android:textColor="@color/mainTextColor"
                        android:textSize="14dp">

                    </TextView>

                    <TextView
                        android:id="@+id/targerWeightTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="30dp"
                        android:text="70 кг"
                        android:textColor="@color/mainTextColor"
                        android:textSize="14dp">

                    </TextView>
                </GridLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp" />

                <Button
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Обновить данные о весе"
                    android:textAllCaps="true"
                    android:textColor="@color/darkAccentColor">

                </Button>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Замеры"
            android:textAllCaps="true"
            android:textColor="@color/mainTextColor"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/personalParametersProgress"
            style="?attr/materialCardViewElevatedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/personalInfoTv">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Обхват груди:"
                        android:textColor="@color/mainTextColor"
                        android:textSize="18dp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/progressChestGirth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:text="78 см"
                        android:textColor="@color/mainTextColor"
                        android:textSize="18dp"></TextView>

                </GridLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dividerInsetEnd="16dp"
                    app:dividerInsetStart="16dp" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Обхват бедер:"
                        android:textColor="@color/mainTextColor"
                        android:textSize="18dp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/progressHipGirth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:layout_gravity="end|center_vertical"
                        android:text="110 см"
                        android:textColor="@color/mainTextColor"
                        android:textSize="18dp"></TextView>

                </GridLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dividerInsetEnd="16dp"
                    app:dividerInsetStart="16dp" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Обхват талии:"
                        android:textColor="@color/mainTextColor"
                        android:textSize="18dp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/progressWaistCircumference"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:layout_gravity="end|center_vertical"
                        android:text="70 см"
                        android:textColor="@color/mainTextColor"
                        android:textSize="18dp"></TextView>
                </GridLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dividerInsetEnd="16dp"
                    app:dividerInsetStart="16dp" />

                <Button
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Обновить замеры"
                    android:textAllCaps="true"
                    android:textColor="@color/darkAccentColor">

                </Button>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginVertical="5dp"
            android:layout_height="wrap_content"
            android:text="График прогресса"
            android:textAllCaps="true"
            android:textColor="@color/mainTextColor"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/progressChart"
            android:layout_width="match_parent"
            android:layout_height="300dp">

        </com.github.mikephil.charting.charts.LineChart>
    </LinearLayout>
    </ScrollView>
</LinearLayout>